@{
var category = ViewBag.Category as Category;
}

<h2>Category Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@category.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@category.description</dd>

        <dt class="col-sm-2">Products</dt>
        <dd class="col-sm-10">
            @if (category.Products.Any())
            {
            <ul>
                @foreach (var product in category.Products)
                {
                <li>@product.name</li>
                }
            </ul>
            }
            else
            {
            <span>No products in this category</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@category.ID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>