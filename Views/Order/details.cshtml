@{
var order = ViewBag.Order as Order;
var orderItems = ViewBag.OrderItems as List<OrderItem>;
}

<h2>Order Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@order.OrderDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@order.Customer?.Name</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@order.TotalAmount.ToString("C")</dd>

        <dt class="col-sm-2">Order Items</dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in orderItems)
                {
                <tr>
                    <td>@item.product?.name</td>
                    <td>@item.quantity</td>
                    <td>@item.price.ToString("C")</td>
                    <td>@((item.quantity * item.price).ToString("C"))</td>
                </tr>
                }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>